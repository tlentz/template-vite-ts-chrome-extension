{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": [
      "./src/global.d.ts", "./node_modules/@types"],
    "types": ["vite/client", "node", "chrome"],
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"],
    }
  },
  "include": ["src", "vite.config.ts", "manifest.config.ts", "./node_modules/@types"],
}
